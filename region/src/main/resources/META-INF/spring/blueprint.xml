<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.eclipse.org/gemini/blueprint/schema/blueprint
    http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/*.xml" />

    <!-- Language Services -->
    <osgi:service ref="languageService"
                  interface="org.motechproject.nms.region.language.service.LanguageService" />

    <osgi:reference id="circleLanguageDataService"
                    interface="org.motechproject.nms.region.language.repository.CircleLanguageDataService" />

    <osgi:reference id="languageDataService"
                    interface="org.motechproject.nms.region.language.repository.LanguageDataService" />

    <!-- Location Services -->
    <osgi:service ref="locationService"
                  interface="org.motechproject.nms.region.location.service.LocationService" />

    <osgi:reference id="stateDataService"
                    interface="org.motechproject.nms.region.location.repository.StateDataService" />

    <osgi:reference id="districtDataService"
                    interface="org.motechproject.nms.region.location.repository.DistrictDataService" />

    <osgi:reference id="talukaDataService"
                    interface="org.motechproject.nms.region.location.repository.TalukaDataService" />

    <osgi:reference id="villageDataService"
                    interface="org.motechproject.nms.region.location.repository.VillageDataService" />

    <osgi:reference id="healthBlockDataService"
                    interface="org.motechproject.nms.region.location.repository.HealthBlockDataService" />

    <osgi:reference id="healthFacilityTypeDataService"
                    interface="org.motechproject.nms.region.location.repository.HealthFacilityTypeDataService" />

    <osgi:reference id="healthFacilityDataService"
                    interface="org.motechproject.nms.region.location.repository.HealthFacilityDataService" />

    <osgi:reference id="healthSubFacilityDataService"
                    interface="org.motechproject.nms.region.location.repository.HealthSubFacilityDataService" />

    <!--- Circle Services -->
    <osgi:reference id="circleDataService"
                    interface="org.motechproject.nms.region.circle.repository.CircleDataService" />
</beans>
